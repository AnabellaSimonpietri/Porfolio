import ExperienceItem from "./ExperienceItem.astro"
const EXPERIENCIE = [
  {
    date: "2023",
    title: "Responsable de Desarrollo Web, Base de Datos y Marketing Digital",
    company: "Laboratorio de Investigación en Comunicación No Verbal",
    description:
      "Lideré el desarrollo y mantenimiento de sitios web internas con WordPress, mejorando la experiencia del usuario y generando un aumento en la interacción. También gestioné las bases de datos internas, logrando una eficiencia operativa. Desarrollé estrategias de Marketing Digital, incrementando el tráfico web en un 30% y mejorando la visibilidad en buscadores mediante campañas de mail marketing y SEO. Como creador de contenidos, aumenté la participación en redes sociales y mejoré la percepción de la marca.",
    link: "https://hugolescano.com.ar/",
  },
  {
    date: "Oct 2017 - Nov 2019",
    title: "Asistente de Contenidos",
